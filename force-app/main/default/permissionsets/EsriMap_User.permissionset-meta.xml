<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Permissions de base pour l'utilisation des composants ArcGIS</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>EsriMap User</label>
    
    <!-- Permissions sur l'objet Map_Area__c -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Map_Area__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    
    <!-- Permissions sur les champs Map_Area__c -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Map_Area__c.Address__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Map_Area__c.Area_Type__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Map_Area__c.Geometry_JSON__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Map_Area__c.Latitude__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Map_Area__c.Longitude__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <!-- Permissions sur les composants LWC -->
    <lightningComponentBundle>
        <lightningComponent>esriMapEditor</lightningComponent>
        <visibility>Visible</visibility>
    </lightningComponentBundle>
    <lightningComponentBundle>
        <lightningComponent>esriMapViewer</lightningComponent>
        <visibility>Visible</visibility>
    </lightningComponentBundle>
</PermissionSet>


