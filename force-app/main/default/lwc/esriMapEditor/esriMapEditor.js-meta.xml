<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__FlowScreen</target>

    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage,lightning__AppPage,lightning__HomePage">
            <property name="champRelation" type="String" description="API name du champ lookup vers l'objet parent" />
            <property name="idParent" type="String" description="ID de l'enregistrement parent pour lier les formes" />
            <property name="showSaveButton" type="Boolean" default="true" description="Afficher le bouton Sauvegarder" />
        </targetConfig>
        <targetConfig targets="lightning__FlowScreen">
            <property name="champRelation" type="String" label="Champ relation (API)" role="inputOnly" />
            <property name="idParent" type="String" label="ID Parent" role="inputOnly" />
            <property name="showSaveButton" type="Boolean" label="Afficher bouton Sauvegarder" role="inputOnly" default="true" />
        </targetConfig>
    </targetConfigs>
    <description>Éditeur ArcGIS simplifié: Carte + Sauvegarde, avec configuration dynamique et géocodage automatique.</description>
</LightningComponentBundle>

